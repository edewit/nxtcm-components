{
  "name": "nxtcm-components",
  "version": "0.0.1",
  "description": "Shared React component library for Red Hat Insights ACM and OCM projects built with PatternFly",
  "main": "dist/index.umd.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/RedHatInsights/nxtcm-components.git"
  },
  "keywords": [
    "react",
    "components",
    "patternfly",
    "acm",
    "ocm",
    "red-hat",
    "insights",
    "typescript",
    "ui"
  ],
  "author": "Red Hat",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/RedHatInsights/nxtcm-components/issues"
  },
  "homepage": "https://github.com/RedHatInsights/nxtcm-components#readme",
  "peerDependencies": {
    "@patternfly/react-core": "^6.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "prettier:check": "prettier --check '{src,cypress,scripts}/**/*.{js,ts,mjs,jsx,tsx}'",
    "prettier:fix": "prettier --write '{src,cypress,scripts}/**/*.{js,ts,mjs,jsx,tsx}'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:ct": "playwright test -c playwright-ct.config.ts",
    "test:ct:watch": "playwright test -c playwright-ct.config.ts --ui",
    "test:ct:debug": "playwright test -c playwright-ct.config.ts --debug",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepare": "husky"
  },
  "dependencies": {
    "@patternfly/patternfly": "^6.4.0",
    "@patternfly/react-component-groups": "^6.3.0",
    "@patternfly/react-icons": "^6.3.1",
    "@patternfly/react-styles": "^6.4.0",
    "js-yaml": "^4.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@patternfly/react-core": "^6.0.0",
    "@playwright/experimental-ct-react": "^1.56.1",
    "@playwright/test": "^1.56.1",
    "@react-hook/resize-observer": "^2.0.2",
    "@storybook/addon-docs": "^9.1.10",
    "@storybook/addon-styling": "^1.3.7",
    "@storybook/react": "^9.1.15",
    "@storybook/react-vite": "^9.1.10",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.9.1",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "get-value": "^4.0.1",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "klona": "^2.0.6",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.93.2",
    "set-value": "^4.1.0",
    "storybook": "^9.1.10",
    "typescript": "^5.2.2",
    "vite": "^5.4.0",
    "yaml": "^2.8.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint",
      "prettier --write"
    ],
    "*.{js,jsx,mjs}": [
      "prettier --write"
    ]
  }
}
